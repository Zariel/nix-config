{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    ':automergeBranch',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':timezone(America/New_York)',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  packageRules: [
    {
      matchManagers: ['nix'],
      matchPackageNames: ['nixpkgs','nixpkgs-stable' ],
      automerge: false,
    },
    {
      matchManagers: ['nix'],
      matchPackageNames: ['helix'],
      automerge: true,
      versioning: 'semver'
    },
    {
      matchManagers: ['github-actions'],
      automerge: true,
      minimumReleaseAge: '3 days'
    }
  ],
  nix: {
    enabled: true
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: ['before 6am every weekday'],
    automerge: true
  }
}
